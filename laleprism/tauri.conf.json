{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LALE Prism",
  "version": "0.1.0",
  "identifier": "com.vertexclique.laleprism",
  "build": {
    "beforeBuildCommand": "npm run build",
    "frontendDist": "frontend/dist"
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "resources": [],
    "copyright": "Copyright Â© 2025 Theo Bulut",
    "category": "DeveloperTool",
    "shortDescription": "WCET Analysis and Real-Time Scheduling Visualization",
    "longDescription": "LALE Prism is a desktop application for Worst-Case Execution Time (WCET) analysis and real-time scheduling visualization for embedded systems.",
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "app": {
    "windows": [
      {
        "title": "LALE Prism",
        "width": 1800,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true,
        "additionalBrowserArgs": "--disable-gpu"
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**", "$RESOURCE/**"]
      }
    }
  },
  "plugins": {}
}
